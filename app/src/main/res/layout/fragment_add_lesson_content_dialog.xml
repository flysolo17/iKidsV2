<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".dialogs.AddLessonContentDialog">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/buttonBack"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/black"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="@string/create_lesson_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageLesson"
                android:scaleType="centerCrop"
                android:layout_marginVertical="10dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                android:background="@color/black"
                />
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/buttonAddImage"
                android:background="@drawable/ic_baseline_add_a_photo_24"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="@string/description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="@string/decribe_the_image_above"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/inputDescIlocano"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Ilocano"
            android:textColorHint="#8A9597"
            app:endIconMode="clear_text"
            app:endIconTint="#151515"
            app:helperText="Describe in Ilocano"
            app:errorEnabled="true"
            app:iconSize="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDescIlocano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textMultiLine">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/inputDescTagalog"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="Tagalog"
            android:textColorHint="#8A9597"
            app:endIconMode="clear_text"
            app:endIconTint="#151515"
            app:helperText="Describe in Tagalog"
            app:errorEnabled="true"
            app:iconSize="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDescTagalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textMultiLine">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/inputDescEnglish"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:hint="English"
            android:textColorHint="#8A9597"
            app:endIconMode="clear_text"
            app:endIconTint="#151515"
            app:helperText="Describe in English"
            app:errorEnabled="true"
            app:iconSize="24dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDescEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textMultiLine">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#388E3C"
        android:text="@string/save" />
</LinearLayout>