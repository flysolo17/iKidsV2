<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/student_main_bg"
    tools:context=".student.StudentMainActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:clickable="true"
        android:id="@+id/cardProfile"
        android:layout_margin="10dp"
        app:cardCornerRadius="50dp"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUserProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/teacher_profile" />
            <TextView
                android:id="@+id/textFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/juan_dela_cruz"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="200dp"
            android:id="@+id/buttonPlay"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/play"
            android:contentDescription="@string/button_play" />
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:id="@+id/buttonLearn"
            android:clickable="true"
            android:background="@drawable/learn"
            android:focusable="true" />
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:id="@+id/buttonQuit"
            android:clickable="true"
            android:background="@drawable/quit"
            android:focusable="true" />
    </LinearLayout>
</FrameLayout>